{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "**/*.js",
      "**/*.jsx",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "**/*.jsonc",
      "**/*.css",
      "**/*.astro",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/.next",
      "!**/.astro",
      "!**/coverage",
      "!**/public",
      "!**/static"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "none"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useMediaCaption": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 15
          }
        },
        "noForEach": "off"
      },
      "correctness": {
        "noUnusedFunctionParameters": "error",
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "nursery": {},
      "performance": {
        "noAccumulatingSpread": "warn",
        "noReExportAll": "warn"
      },
      "style": {
        "noEnum": "error",
        "useExportType": "error",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["kebab-case", "PascalCase"],
            "requireAscii": true,
            "strictCase": false
          }
        },
        "useImportType": "error",
        "useNamingConvention": {
          "level": "error",
          "options": {
            "conventions": [
              {
                "formats": ["camelCase", "PascalCase"],
                "selector": {
                  "kind": "function"
                }
              },
              {
                "formats": ["camelCase", "PascalCase", "CONSTANT_CASE"],
                "selector": {
                  "kind": "variable"
                }
              },
              {
                "formats": ["CONSTANT_CASE", "PascalCase"],
                "selector": {
                  "kind": "typeLike"
                }
              },
              {
                "formats": ["camelCase", "CONSTANT_CASE", "PascalCase", "snake_case"],
                "match": "_*(.+)",
                "selector": {
                  "kind": "objectLiteralProperty"
                }
              },
              {
                "match": "_*(.+)",
                "formats": ["camelCase", "PascalCase", "snake_case"],
                "selector": {
                  "kind": "typeProperty"
                }
              }
            ],
            "requireAscii": false,
            "strictCase": false
          }
        },
        "useNodejsImportProtocol": "error",
        "useNumberNamespace": "error",
        "useSelfClosingElements": "error",
        "useShorthandAssign": "error",
        "noSubstr": "error"
      },
      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["log"]
          }
        },
        "noDebugger": "error",
        "noDuplicateElseIf": "error",
        "noFocusedTests": "error",
        "noSkippedTests": "warn"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.astro", "**/*.{jsx,tsx}", "**/*.css.ts"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": {
              "level": "error",
              "options": {
                "filenameCases": ["camelCase", "kebab-case", "PascalCase"],
                "requireAscii": true,
                "strictCase": false
              }
            }
          }
        }
      }
    },
    {
      "includes": [
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "**/test/**",
        "**/tests/**",
        "**/__tests__/**"
      ],
      "linter": {
        "rules": {
          "complexity": {
            "noExcessiveCognitiveComplexity": "off"
          },
          "suspicious": {
            "noFocusedTests": "error",
            "noSkippedTests": "warn",
            "noConsole": {
              "level": "off",
              "options": {
                "allow": ["log"]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["**/stories/**", "**/*.stories.{js,jsx,ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/config/**",
        "**/*.config.{js,ts}",
        "**/vite.config.{js,ts}",
        "**/next.config.{js,ts}",
        "**/astro.config.{js,ts}"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off"
          },
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": ["**/pages/**", "**/app/**", "**/src/pages/**", "**/src/app/**"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": ["**/use*.{js,jsx,ts,tsx}", "**/hooks/**/*.{js,jsx,ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": {
              "level": "error",
              "options": {
                "filenameCases": ["camelCase", "kebab-case"],
                "requireAscii": true,
                "strictCase": false
              }
            }
          }
        }
      }
    },
    {
      "includes": ["**/*.astro"],
      "linter": {
        "rules": {
          "style": {
            "useExportType": "off",
            "useImportType": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
