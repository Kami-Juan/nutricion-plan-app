{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Browser library TypeScript configuration",
  "extends": "./base.tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  }
}
