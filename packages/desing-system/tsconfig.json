{
  "extends": "@k-health/typescript-configs/react-library",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "rootDir": "src",
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json"
  ]
}